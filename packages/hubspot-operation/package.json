{
	"name": "@directus-labs/hubspot-operation",
	"description": "Hubspot API operation for managing companies, contacts, activities, and deals.",
	"icon": "extension",
	"version": "1.0.0",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-operation"
	],
	"type": "module",
	"files": [
		"dist"
	],
	"directus:extension": {
		"type": "operation",
		"path": {
			"app": "dist/app.js",
			"api": "dist/api.js"
		},
		"source": {
			"app": "src/app.ts",
			"api": "src/api.ts"
		},
		"host": "^10.0.0 || ^11.0.0",
		"sandbox": {
			"enabled": true,
			"requestedScopes": {
				"log": {},
				"request": {
					"methods": [
						"GET",
						"POST",
						"PATCH",
						"DELETE"
					],
					"urls": [
						"https://api.hubapi.com/**"
					]
				}
			}
		}
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link"
	},
	"devDependencies": {
		"@directus/extensions-sdk": "^12.1.2",
		"typescript": "^5.6.2",
		"vue": "^3.5.3"
	}
}
